!!! 5
%html
  %head
    %title Blog
    = raw javascript_include_tag :defaults
    = raw include_tiny_mce_if_needed
    = raw stylesheet_link_tag "screen", :media => "screen, projection"
    = raw stylesheet_link_tag "print", :media => "print"
    /[if lt IE 8]
      = raw stylesheet_link_tag "ie", :media => "screen, projection"
    %link{:href => 'http://fonts.googleapis.com/css?family=Cantarell', :rel => 'stylesheet', :type => 'text/css'}
    = csrf_meta_tag
  %body
    #container
      #header= render "shared/header"
      %hr
      #content= yield
      #sidebar= render "shared/sidebar"
      %hr
      #footer= render "shared/footer"
